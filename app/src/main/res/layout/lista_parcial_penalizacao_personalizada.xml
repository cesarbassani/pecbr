<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lista_parcial_penalizacao_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_lista_parcial_penalizacao_qtde"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quantidade:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/lista_parcial_penalizacao_qtde"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"
                android:text="Quantidade"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_lista_parcial_penalizacao_peso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Peso:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/lista_parcial_penalizacao_peso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.8"
                android:text="Peso"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_lista_parcial_penalizacao_valor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valor:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/lista_parcial_penalizacao_valor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.8"
                android:text="Valor"
                android:textSize="16dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>